PORT=5000
NODE_ENV=development

# AWS RDS PostgreSQL Configuration
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=photoblog
DB_USER=your_db_username
DB_PASS=your_db_password
DB_DIALECT=postgres

# AWS S3 Configuration
S3_BUCKET_NAME=your-photo-blog-bucket

# AWS Region (Optional on EC2 - auto-detected from instance metadata)
# Recommended to set explicitly for clarity and faster startup
AWS_REGION=us-east-1

# AWS Credentials (Optional - only for local development)
# On EC2, use IAM roles instead (more secure)
# Leave these empty when deploying to EC2 with IAM role
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
